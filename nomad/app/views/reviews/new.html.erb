<h1>Add a Review for: <%=@tour.tour_name%></h1>


  <%= form_for [@tour, @review] do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :rating %><br>
    <%= f.number_field :rating, min: 1, max: 5 %>
  </p>
  <p>
    <%= f.submit "Save" %>
  </p>
<% end %>